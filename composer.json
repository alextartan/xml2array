{
  "name": "alextartan/xml2array",
  "description": "Convert from XML to array, array to XML. PHP7, 100% unit test coverage, PSR2 compliant",
  "keywords": [
    "xml",
    "array"
  ],
  "license": "Apache-2.0",
  "type": "library",
  "homepage": "https://github.com/alextartan/xml2array",
  "authors": [
    {
      "name": "Alex Tartan",
      "email": "alex.tartan@gmail.com",
      "homepage": "http://web-factory.co",
      "role": "Lead"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-dom": "*"
  },
  "autoload": {
    "psr-4": {
      "RedLine\\Array2Xml\\": "src/ArrayToXml"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.*",
    "zendframework/zend-coding-standard": "~1.0.0",
    "php-coveralls/php-coveralls": "2.1.*"
  },
  "autoload-dev": {
    "psr-4": {
      "RedLineTest\\Array2Xml\\": "test/ArrayToXml"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "vendor/bin/phpcs",
    "cs-fix": "vendor/bin/phpcbf",
    "test": "vendor/bin/phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "vendor/bin/php-coveralls -v"
  }
}