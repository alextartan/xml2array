{
  "name": "alextartan/xml2array",
  "description": "Convert from XML to array, array to XML, based on libs from lalit.org",
  "license": "Apache-2.0",
  "type": "library",
  "require": {
    "php": ">=7.0",
    "ext-dom": "*"
  },
  "autoload": {
    "psr-4": {
      "RedLine\\Array2Xml\\": "src/ArrayToXml"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.*",
    "zendframework/zend-coding-standard": "~1.0.0"
  },
  "autoload-dev": {
    "psr-4": {
      "RedLineTest\\Array2Xml\\": "test/ArrayToXml"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  }
}